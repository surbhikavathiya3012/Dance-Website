extends base.pug

block scripts 
  script(src="/static/index.js")

block style   
    style 
      include ../static/style.css
      include ../static/stylecontact.css

block content
   div.container
    h1 Contact Us
    form(action="/contact",method="post", class="myform")
       input(type="name", class="myinput", name="name", placeholder="enter the name")
       input(type="phone", class="myinput", name="phone", placeholder="enter the phone") 
       input(type="email", class="myinput", name="email", placeholder="enter the email") 
       input(type="address", class="myinput", name="address", placeholder="enter the address") 
       input(type="concern", class="myinput", name="concern", placeholder="enter the concern") 
       button(class="btn")
         |submit